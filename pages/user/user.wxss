.wrapper {
  width: 750px;
}

.banner {
  width: 100%;
  height: 200rpx;
  background: pink;
}

.banner-pic {
  width: 750rpx;
  height: 100%;
  position: relative;
}

.user-pic {
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
  position: absolute;
  top: 33rpx;
  left: 30rpx;
  overflow: hidden;
}

.user-pic > image {
  width: 100%;
  height: 100%;
}

.user-name {
  width: 400rpx;
  height: 20rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  position: absolute;
  top: 60rpx;
  left: 160rpx;
}

.main-wrapper {
  width: 720rpx;
  height: 800rpx;
  margin-left: 30rpx;
}

.item-wrapper {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
  background: #fff;
  display: flex;
  align-items: center;
  border-radius: 0;
}

.item-wrapper::after {
  border: none;
  border-radius: 0;
}

.item-wrapper text {
  top: 0;
  height: 100%;
  line-height: 100rpx;
}

.item-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 35rpx;
  left: 0;
}

.item-text {
  font-size: 16px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333;
  position: absolute;
  top: 30rpx;
  left: 60rpx;
}

.item-right {
  width: 20rpx;
  height: 35rpx;
  position: absolute;
  top: 35rpx;
  right: 30rpx;
}

.item-phone {
  position: absolute;
  top: 30rpx;
  right: 80rpx;
  font-size: 16px;
  color: #006428;
}
