/* pages/contractManager/contractManager.wxss *//* index/contract-ment/index.wxss */
.management{
  padding: 0 30rpx;
}
.management>view{
  padding: 30rpx 0;
  position: relative;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.management-title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.management-time{
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,241,0,1);
  padding: 4rpx 4rpx 4rpx 1rpx;
  margin-top: 20rpx;
  background: #006428;
}
.management-price{
  margin-top: 39rpx;
  font-size:40rpx;
  font-weight:bold;
  color:rgba(244,83,66,1);
  text-indent: -6rpx;
}
.management-hint{
  position: absolute;
  right: 11rpx;
  bottom: 31rpx;
} 
.management-hint>view{
  font-size:28rpx;
  font-weight:400;
  color:rgba(244,83,66,1);
}
.hint-button>view{
  display: flex;
  align-items: center;
  justify-content: center;
  width:144rpx;
  height:68rpx;
  background:rgba(0,100,40,1);
  font-size:26rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  border-radius:10rpx;
}