/* index/contract/index.wxss */
pages{
  padding-bottom: 120rpx;
}
.contract-head{
  display: flex;
  align-items: center;
  padding:0 30rpx;
  height: 100rpx;
  background:rgba(228,245,235,1);
}
.contract-head>view:nth-child(2){
  font-size:32rpx;
  font-weight:500;
  color:rgba(0,100,40,1);
  margin-left: 20rpx;
}
.contract-head>image{
  width: 34rpx;
  height: 37rpx;
  display: block;
}
.contract-head>view:nth-child(3){
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.contract-head>view:nth-child(3)>image{
  width: 14rpx;
  height: 32rpx;
  display: block;
}
.contract-timer{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding: 30rpx;
}
.contract-item-wrap{
  margin: 0 30rpx;
}
.contract-item-wrap>view{
  padding: 30rpx;
  background:rgba(245,247,250,1);
  margin-bottom: 20rpx;
}
.contract-item-title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(77,77,77,1);
}
.contract-item-msg{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 19rpx;
}
.contract-item-msg>view{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.contract-item-msg>text{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(244,83,66,1);
}
.shop-wrap{
  height:120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:  0 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(230,230,230,1);
}
.shop-prices{
  font-size: 28rpx;
  color: #333333;
}
.shop-prices>text{
  color: #F45342;
  font-size: 48rpx;
  font-weight: bold;
}
.shop-button{
  width:320rpx;
  height:88rpx;
  background:rgba(0,100,40,1);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}