/* pages/footmark/raceDetails/raceDetails.wxss */

.details {
  position: relative;
}

.photo-1 {
  position: relative;
  height: 140rpx;
  background: #006428;
}

.photo-1 .banner-02 {
  position: absolute;
  width: 100%;
  height: 100%;
}

.photo-2 {
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}

.list-box {
  padding: 30rpx;
  margin: 0 30rpx 0;
  position: relative;
  height: 240rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(229, 229, 229, 1);
}

.list-box image {
  width: 22rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.list-box .title {
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(50, 50, 50, 1);
  margin-bottom: 30rpx;
  width: 100%;
}

.list-box .title .title01 {
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(50, 50, 50, 1);
  margin-bottom: 30rpx;
  width: 100%;
}

.list-box .title .title02 {
  background: rgba(228, 245, 235, 1);
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 100, 40, 1);
}

.list-box .left {
  flex: 2;
}

.list-box .right {
  flex: 1;
}

.list-box .title-ccc {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.list-box .green {
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 100, 40, 1);
}

.list-box .title-black {
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(77, 77, 77, 1);
}

.rongyu-box {
  padding: 30rpx;
}

.plan-1 {
  text-align: center;
  padding: 80rpx 0;
}

.plan-1 text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.plan-1 .green {
  color: #006428;
}

.plan-2 {
  padding: 0 30rpx;
}

.plan-2 .uesr-box {
  display: flex;
  align-items: center;
}

.plan-2 .user {
  display: flex;align-items: center;
  flex: 1.5;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.plan-2 .star-box {
  flex: 1;
}

.plan-2 .uesr-box .user-img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.jiaoliantitle{
  background: rgba(228, 245, 235, 1);
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 100, 40, 1);
  margin: 20rpx 10rpx 28rpx 0; 
}
.plan-2 .contetnt-box{
  padding: 20rpx 0rpx 28rpx 0;
  border-bottom: 1px solid rgba(229, 229, 229, 1);
}
.plan-2 .contetnt{
  font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(77,77,77,1);
line-height:48rpx;
}

/* 星星样式 */

.starLen {
  margin-right: 10px;
  display: inline-block;
}

.star {
  width: 30rpx;
  height: 30rpx;
  vertical-align: text-bottom;
  display: inline-block;
}

.scoreContent {
  margin-left: 100px;
  display: inline-block;
}

/* 星星样式结束 */
