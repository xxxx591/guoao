/**index.wxss**/

.container {
  padding: 0 30rpx;
  z-index: 999999999;
}

.img-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.img {
  width: 100%;
}

.tab-box {
  display: flex;
  align-items: center;
  z-index: 9;
  text-align: left;
  color: #fff;
  width: 100%;
}

.tab-box image {
  width: 30rpx;
  height: 35rpx;
  padding-right: 20rpx;
}

.swiper {
  width: 100%;
  height: 360rpx;
}

.swiper-item {
  padding-top: 33rpx;
  border-radius: 20rpx;
}

.slide-image {
  width: 710rpx;
  height: 360rpx;
  border-radius: 20rpx;
}

.free {
  padding-top: 50rpx;
  width: 100%;
  height: 110rpx;
  padding-bottom: 80rpx;
}

.free image {
  width: 100%;
  height: 100%;
}

.new {
  width: 100%;
}

.new, .team,.teach {
  padding-top: 40rpx;
}

.new-1 {
  display: flex;
  justify-content: space-between;
  justify-items: center;
}

.box1 {
  display: flex;
  justify-items: center;
}

.new-1 .box1 text {
  padding: 0 16rpx;
  color: rgba(51, 51, 51, 1);
}

.new-1 .box1 image {
  width: 14rpx;
  height: 38rpx;
}

.new-1 .box2 text {
  padding: 0 16rpx;
  height: 38rpx;
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
}

.new-1 .box2 image {
  width: 10rpx;
  height: 16rpx;
}

.new-2 {
  display: flex;
  padding-bottom: 34rpx;
  padding-top:40rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.new-2 .new-left {
  flex: 3;
}

.new-2 .new-left .title1 text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 46rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.new-2 .new-left .title2 {
    display: flex;
  justify-content: space-between;
  padding-top: 80rpx;
}

.new-2 .new-left .title2 text {
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 48rpx;
}

.new-2 .new-right {
  flex: 1.5;
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  margin-left: 43rpx; 
}
.new-2 .new-right image{
  width: 200rpx;
  height: 200rpx;
}

.scroll-view {
  display: flex;
  flex-direction: row;
  text-align: center;
  margin-left: 30rpx;
}

.view-item {
  align-items: center;
  width: 400rpx;
  height: 400rpx;
}

.view-item image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.teach{
  box-sizing: border-box;
  padding:  30rpx;
}
.teact-view{
  display: flex;
  text-align: center;
  flex-wrap: nowrap;
  padding-top: 20rpx;
}
.teach-box{
  width: 50%
}
.teach-box image{
  width: 100%;
  height: 200rpx;
}
